root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,markdown}]
max_line_length = 80

[*.lua]
indent_style = space
indent_size = 2
max_line_length = 120

[*.{json,js,ts}]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2