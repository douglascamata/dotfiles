// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "show_signature_help_after_edits": true,
  "auto_signature_help": true,
  "language_models": {
    "openai_compatible": {
      "OpenCode Zen": {
        "api_url": "https://opencode.ai/zen/v1",
        "available_models": [
          {
            "name": "gpt-5.2",
            "max_tokens": 200000,
            "max_output_tokens": 32000,
            "max_completion_tokens": 200000,
            "capabilities": {
              "tools": true,
              "images": false,
              "parallel_tool_calls": true,
              "prompt_cache_key": true,
              "chat_completions": true
            }
          },
          {
            "name": "gpt-5.2-codex",
            "max_tokens": 200000,
            "max_output_tokens": 32000,
            "max_completion_tokens": 200000,
            "capabilities": {
              "tools": true,
              "images": false,
              "parallel_tool_calls": true,
              "prompt_cache_key": true,
              "chat_completions": true
            }
          }
        ]
      }
    },
    "anthropic": {
      "api_url": "https://opencode.ai/zen",
    },
    "openai": {
      "api_url": "https://opencode.ai/zen/v1"
    }
  },
  "git": {
    "blame": {
      "show_avatar": true
    },
    "inline_blame": {
      "show_commit_summary": true
    }
  },
  "which_key": {
    "enabled": true,
    "delay_ms": 350
  },
  "collaboration_panel": {
    "button": true
  },
  "preview_tabs": {},
  "tab_bar": {
    "show": true
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "indent_guides": {
    "active_line_width": 2,
    "line_width": 1,
    "background_coloring": "disabled",
    "coloring": "fixed"
  },
  "toolbar": {
    "code_actions": true
  },
  "current_line_highlight": "all",
  "buffer_line_height": "comfortable",
  "ui_font_family": ".ZedSans",
  "buffer_font_family": "Berkeley Mono Variable",
  "prettier": {
    "allowed": false
  },
  "icon_theme": "Catppuccin Macchiato",
  "outline_panel": {
    "dock": "right"
  },
  "terminal": {
    "font_family": "BerkeleyMono Nerd Font Mono"
  },
  "show_edit_predictions": true,
  "inlay_hints": {
    "show_background": true,
    "enabled": false,
    "toggle_on_modifiers_press": {
      "control": true,
      "alt": true
    }
  },
  "diagnostics": {
    "button": true,
    "include_warnings": true,
    "lsp_pull_diagnostics": {
      "enabled": true
    },
    "inline": {
      "enabled": true
    }
  },
  "show_whitespaces": "all",
  "edit_predictions": {
    "provider": "copilot",
    "mode": "eager",
    "disabled_globs": []
  },
  "agent": {
    "tool_permissions": {
      "default": "allow"
    },
    "favorite_models": [
      {
        "provider": "openai",
        "model": "gpt-5.2"
      },
      {
        "provider": "openai",
        "model": "gpt-5.2-codex"
      }
    ],
    "play_sound_when_agent_done": true,
    "use_modifier_to_send": true,
    "single_file_review": true,
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-5"
    },
    "default_profile": "ask",
    "default_model": {
      "provider": "OpenCode Zen",
      "model": "gpt-5.2-codex"
    }
  },
  "agent_servers": {
    "codex": {
      "default_mode": "auto",
      "command": "npx",
      "args": [
        "@zed-industries/codex-acp"
      ]
    },
    "opencode (custom)": {
      "type": "custom",
      "command": "opencode",
      "args": [
        "acp"
      ],
      "env": {}
    },
    "goose ðŸª¿": {
      "type": "custom",
      "command": "goose",
      "args": [
        "acp"
      ],
      "env": {}
    }
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "vim_mode": true,
  "ui_font_size": 14.0,
  "buffer_font_size": 12.0,
  "theme": "Catppuccin Macchiato",
  "git_panel": {
    "tree_view": true,
    "sort_by_path": true,
  },
  "file_types": {
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml"
    ]
  }
}
